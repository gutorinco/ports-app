<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/product_qnt_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:padding="@dimen/small_margin"
        android:orientation="vertical">

    <TextView android:id="@+id/product_qnt_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_font"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/product_qnt_dialog_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/small_font"
                android:layout_weight="1"/>

        <TextView android:id="@+id/product_qnt_dialog_sale_financed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/small_font"
                android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:baselineAligned="false"
            android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tiny_margin"
                android:layout_weight="1">

            <EditText
                    android:id="@+id/product_qnt_dialog_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/tiny_margin"
                    android:autofillHints="@string/quantidade"
                    android:hint="@string/quantidade"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/small_font"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/tiny_margin"
                    android:layout_marginStart="@dimen/tiny_margin"
                    android:layout_marginTop="@dimen/tiny_margin"
                    android:text="@string/cor"
                    android:textSize="@dimen/small_font"/>
            <Spinner
                    android:id="@+id/product_qnt_dialog_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>