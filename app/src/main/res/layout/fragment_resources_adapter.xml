<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/tiny_margin"
        android:paddingRight="@dimen/tiny_margin"
        android:paddingTop="@dimen/small_margin">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation"
            app:cardCornerRadius="@dimen/small_margin">


        <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/large_margin"
                android:paddingTop="@dimen/large_margin"
                android:orientation="vertical">

            <ImageView android:id="@+id/main_resources_img"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:contentDescription="@string/cliente"
                    android:src="@drawable/ic_people"/>

            <TextView android:id="@+id/main_resources_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/small_margin"
                    android:scrollHorizontally="true"
                    android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>