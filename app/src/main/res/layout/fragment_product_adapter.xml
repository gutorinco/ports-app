<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/product_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:padding="@dimen/small_margin"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/product_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_font"
                android:textStyle="bold"/>

        <TextView android:id="@+id/product_adapter_color_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tiny_margin"
                android:textSize="@dimen/medium_font"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/product_adapter_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/small_font"
                android:layout_weight="1"/>

        <TextView android:id="@+id/product_adapter_sale_financed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/small_font"
                android:layout_weight="1"/>

        <TextView android:id="@+id/product_adapter_quantity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/small_font"
                android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>