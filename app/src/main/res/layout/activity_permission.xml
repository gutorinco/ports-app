<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/permission_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radial_gradient"
        tools:context=".view.activity.PermissionActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/very_large_margin">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_margin"
                    android:padding="@dimen/large_margin">

                <ImageView
                        android:id="@+id/permission_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_camera_accent"/>

            </FrameLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_font"
                    android:text="Para prosseguir é necessário conceder permissão para o app acessar o recurso:"/>

            <TextView
                    android:id="@+id/permission_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_font"
                    android:textStyle="bold|italic"
                    android:textAllCaps="true"/>

        </LinearLayout>

    </ScrollView>

    <Button android:id="@+id/permission_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_button"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-5dip"
            android:layout_marginRight="-5dip"
            android:layout_marginTop="-5dip"
            android:layout_marginBottom="-6dip"
            android:padding="0dp"
            android:backgroundTint="@color/colorSecondary"
            android:text="@string/prosseguir"/>


</RelativeLayout>