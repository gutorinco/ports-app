<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:padding="@dimen/small_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/financial_adapter_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_font"
                android:textStyle="bold"
                android:layout_weight="1"/>

        <TextView android:id="@+id/financial_adapter_reference"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:textSize="@dimen/small_font"
                android:layout_weight="3"/>

    </LinearLayout>

    <TextView android:id="@+id/financial_adapter_emission_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/small_font"/>

    <TextView android:id="@+id/financial_adapter_payment_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/small_font"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/financial_adapter_due_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/small_font"
                android:layout_weight="1"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3">

            <TextView android:id="@+id/financial_adapter_status"
                    android:layout_width="@dimen/default_margin"
                    android:layout_height="@dimen/default_margin"
                    android:background="@drawable/filled_circle_primary"/>

            <TextView android:id="@+id/financial_adapter_status_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/tiny_margin"
                    android:textSize="@dimen/small_font"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>