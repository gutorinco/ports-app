<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/tiny_margin"
        android:paddingRight="@dimen/tiny_margin"
        android:paddingTop="@dimen/small_margin">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/default_padding"
            app:cardElevation="@dimen/progress_bar_height"
            style="@style/Card">


        <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/large_margin"
                android:paddingTop="@dimen/large_margin"
                android:orientation="vertical">

            <ImageView android:id="@+id/main_resources_img"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:contentDescription="@string/cliente"
                    android:src="@drawable/ic_people"/>

            <TextView android:id="@+id/main_resources_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/small_margin"
                    android:scrollHorizontally="true"
                    android:textStyle="bold"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>