<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_opaque"
        tools:context=".view.fragment.ProductFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height">

            <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:id="@+id/product_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomProgressBar"/>

        </FrameLayout>

        <TextView android:id="@+id/product_empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/nao_encontrado"
                android:textSize="@dimen/medium_font"
                android:visibility="gone"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/product_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_recyclerview"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_opaque"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/product_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/default_margin"
            android:backgroundTint="@color/dark"
            android:elevation="@dimen/elevation"
            android:src="@drawable/ic_add"
            android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>