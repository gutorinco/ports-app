<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/crm_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AdapterCard">

        <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_margin"
                    android:layout_weight="1">

                <TextView android:id="@+id/crm_adapter_customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/medium_font"
                        android:textStyle="bold"/>

                <TextView android:id="@+id/crm_adapter_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/small_font"/>

                <TextView android:id="@+id/crm_adapter_occurence_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/small_font"/>

                <TextView android:id="@+id/crm_adapter_solution_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/small_font"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView android:id="@+id/crm_adapter_emission_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/small_font"
                            android:layout_weight="1"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="3">

                        <TextView android:id="@+id/crm_adapter_status"
                                android:layout_width="@dimen/default_margin"
                                android:layout_height="@dimen/default_margin"
                                android:background="@drawable/filled_circle_primary"/>

                        <TextView android:id="@+id/crm_adapter_status_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/tiny_margin"
                                android:textSize="@dimen/small_font"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9">

                <ImageButton
                        android:id="@+id/crm_adapter_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_dots"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"/>

            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>