<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomProgressBar" parent="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:minHeight">@dimen/progress_bar_height</item>
        <item name="android:scaleY">5</item>
        <item name="mpb_indeterminateTint">@color/colorSecondary</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_progressTint">@color/white_opaque</item>
    </style>

    <style name="Card" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="AdapterCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="android:layout_margin">3.5dp</item>
        <item name="strokeColor">@color/soft_blue</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textSize">@dimen/small_font</item>
    </style>

    <style name="SpinnerDropDownItemStyle">
        <item name="android:textSize">@dimen/small_font</item>
    </style>

</resources>
